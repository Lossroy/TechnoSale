@model TechnoSale.MvcWebUI.Models.UrunListViewModel
@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@addTagHelper "*,TechnoSale.MvcWebUI"
@{
    Layout = "~/Views/_Layout.cshtml";
}
	<div>
        <table class="table table-responsive ">
            <tr>
                <td>ÜRÜN ADI</td>
                <td>ÜRÜN DETAYI</td>
                <td>ÜRÜN MARKASI</td>
                <td>ÜRÜN STOĞU</td>
                <td>ÜRÜN FİYATI</td>
                <td>ÜRÜN TARİHİ</td>
                <td></td>
            </tr>
            @foreach (var urun in Model.Urunler)
            {
            <tr>
                <td>@urun.urun_adi</td>
                <td>@urun.urun_detay</td>
                <td>@urun.urun_marka</td>
                <td>@urun.urun_stok</td>
                <td>@urun.urun_fiyat</td>
                <td>@urun.urun_tarih</td>
                <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-urun_id="@urun.urun_id">sepete ekle</a></td>
            </tr>
            }
        </table>
	</div>
<urun-list-pager 
current-kategori="@Model.CurrentKategori" 
current-page="@Model.CurrentPage" 
page-count="@Model.PageCount" 
page-size="@Model.PageSize"></urun-list-pager>